# Database Configuration (Neon Postgres)
DATABASE_URL=postgresql://user:password@host:port/dbname

# Cloudflare R2 Storage Configuration
R2_ACCESS_KEY=your_r2_access_key
R2_SECRET_KEY=your_r2_secret_key
R2_BUCKET_NAME=your_r2_bucket_name
R2_ENDPOINT_URL=https://<account_id>.r2.cloudflarestorage.com
STORAGE_PROVIDER=r2

# Flask Application Settings
SECRET_KEY=your_secret_key_here
# FLASK_DEBUG=1 # Optional for development: 1 or True
# APP_GLOBAL_LOG_LEVEL=INFO # DEBUG, INFO, WARNING, ERROR, CRITICAL
# SERVER_NAME=localhost:5000 # Domain name for the application (e.g. example.com)
# PREFERRED_URL_SCHEME=http # http or https
# SESSION_TYPE=null # null (for native Flask sessions) or cookie

# Google OAuth Configuration
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# Email Configuration (Gmail API)
# GMAIL_SENDER_ADDRESS=your_email@gmail.com
# GMAIL_REFRESH_TOKEN=your_refresh_token
# Note: GMAIL_OAUTH_REDIRECT_URI is now auto-detected. You usually do not need to set it.
# It defaults to {PREFERRED_URL_SCHEME}://{SERVER_NAME}/admin/gmail_auth/authorize_callback
# GMAIL_OAUTH_REDIRECT_URI=http://localhost:5000/admin/gmail_auth/authorize_callback
# MAIL_DEFAULT_SENDER=fallback_sender@example.com

# Booking Settings
# CHECK_IN_GRACE_MINUTES=15
# AUTO_CANCEL_CHECK_INTERVAL_MINUTES=5
# MAX_BOOKING_DURATION_HOURS=8
# MIN_BOOKING_DURATION_MINUTES=15
# BOOKING_LEAD_TIME_DAYS=14
# DEFAULT_ITEMS_PER_PAGE=10

# Admin User Setup (Optional, defaults used if not set)
# DEFAULT_ADMIN_EMAIL=admin@example.com
# DEFAULT_ADMIN_PASSWORD=admin

# Webhooks (Notification)
# SLACK_WEBHOOK_URL=
# TEAMS_WEBHOOK_URL=

# Map Settings
# MAP_RESOURCE_OPACITY=0.7

# Backup Configuration
# AZURE_BACKUP_INTERVAL_MINUTES=60
# UNIFIED_FULL_BACKUP_ENABLED=false
# UNIFIED_INCREMENTAL_BACKUP_ENABLED=false
